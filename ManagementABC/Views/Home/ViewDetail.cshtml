@model List<DetailViewModel>

@{
    ViewBag.Title = "Detail class";

}


    <div>
        <a asp-controller="Home" asp-action="Create" class="btn btn-outline-primary" style="width:auto">Create</a>
        <table class="table table-striped table-hover mt-2">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Full Name</th>
                    <th>Date of birth</th>
                    <th>Gender</th>
                    <th>Email</th>
                    <th>Class</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {

                    foreach (var std in Model)
                    {
                        <tr>
                            <td>@std.Id</td>
                            <td>@std.Fullname</td>
                            <td>@std.DoB</td>
                            <td>@std.Gender</td>
                            <td>@std.Email</td>
                            <td>@std.ClassName</td>

                            <td>
                                <a asp-controller="Home" asp-action="Edit" asp-route-id="@std.Id" class="btn btn-outline-primary">Edit</a>
                                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#@("Model"+@std.Id)">
                                    Delete
                                </button>
                                <div class="modal" id="@("Model"+@std.Id)">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <form asp-controller="Home" asp-action="Delete" method="post">
                                                <div class="modal-header">
                                                    <h4 class="modal-title">Confirm delete student</h4>
                                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                </div>
                                                <div class="modal-body">
                                                    Are you sure want to remove this student?
                                                </div>    
                                                <div class="modal-footer">
                                                    <a asp-controller="Home" asp-action="Delete" asp-route-id="@std.Id" class="btn btn-outline-warning">Yes</a>
                                                    <button type="button" class="btn btn-outline-primary" data-dismiss="modal">No</button>
                                                </div>
                                            </form>

                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <a asp-controller="Home" asp-action="Index"class="btn btn-outline-primary">Back</a>
    </div>
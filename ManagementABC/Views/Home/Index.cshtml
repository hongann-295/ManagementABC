@model List<ClassIndexViewModel>
@{
    ViewBag.Title = "Home";
  
}

<div>
    <a asp-controller="Home" asp-action="Create" class="btn btn-outline-primary" style="width:auto">Create</a>
    <table class="table table-striped table-hover mt-2">
        <thead>
            <tr>
                <th>Id</th>
                <th>Class Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {

                foreach (var clas in Model)
                {
            <tr>
                <td>@clas.ClassId</td>
                <td>@clas.ClassName</td>
                <td>
                    <a asp-controller="Home" asp-action="ViewDetail" asp-route-id="@clas.ClassId" class="btn btn-outline-primary">View</a>
                </td>
            </tr>
                }
            }
        </tbody>
    </table>
</div>
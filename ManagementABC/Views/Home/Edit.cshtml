@model HomeEditViewModel
@{
    ViewBag.Title = "Edit student";
    var cl = ViewBag.Classes as List<Class>;

}

<form enctype="multipart/form-data" asp-controller="Home" asp-action="Edit" method="post" class="mt-3">
    <div class="row form-group">
        <div class="col-sm-2">
            <label asp-for="Fullname"></label>
        </div>
        <div class="col-sm-10">
            <input asp-for="Fullname" class="form-control" />
            <span asp-validation-for="Fullname" class="text-danger"></span>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-sm-2">
            <label asp-for="ClassId"></label>
        </div>
        <div class="col-sm-10">
            <select asp-for="ClassId" class="custom-select">
                <option value="Select a department"></option>
                @if (cl != null)
                {
                    foreach (var cla in cl)
                    {
                        <option value="@cla.ClassId">@cla.ClassName</option>
                    }
                }
            </select>
            <span asp-validation-for="ClassId" class="text-danger"></span>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-sm-2">
            <label asp-for="Gender"></label>
        </div>
        <div class="col-sm-10">
            <input asp-for="Gender" class="form-control" />
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-sm-2">
            <label asp-for="DoB"></label>
        </div>
        <div class="col-sm-10">
            <input asp-for="DoB" class="form-control" />
            <span asp-validation-for="DoB" class="text-danger"></span>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-sm-2">
            <label asp-for="Email"></label>
        </div>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-sm-12">
            <button type="submit" class="btn btn-outline-primary">Update</button>
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-warning">Back</a>
        </div>

    </div>
</form>